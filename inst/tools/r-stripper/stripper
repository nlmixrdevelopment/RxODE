if [ -z $R_HOME ]; then
    R_HOME=`R RHOME`
fi

if [ "$R_HOME" = "" ]; then
    echo "Could not find R_HOME."
    exit 0
fi

if [ -z $1 ]; then
    $R_HOME/bin/Rscript inst/tools/r-stripper/stripper.R
else
    $R_HOME/bin/Rscript inst/tools/r-stripper/stripper.R "$1"
fi
